<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
    <extension
         id="aerial"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="%productName">
         <property
               name="appName"
               value="Surf">
         </property>
         <property
               name="windowImages"
               value="images/aerial16.bmp,images/aerial32.bmp">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupMessageRect"
               value="7,220,490,20">
         </property>
         <property
               name="startupProgressRect"
               value="0,280,500,15">
         </property>
         <property name="aboutText" value="%productBlurb"/> 
      </product>
   </extension>
    <extension
          point="org.eclipse.ui.perspectiveExtensions">
       <perspectiveExtension
             targetID="org.eclipse.cdt.ui.CPerspective">
          <view
                closeable="true"
                id="org.eclipse.mylyn.tasks.ui.views.repositories"
                moveable="true"
                relationship="stack"
                relative="org.eclipse.ui.views.ProblemView"
                visible="true">
          </view>
          <viewShortcut
                id="org.eclipse.mylyn.tasks.ui.views.repositories">
          </viewShortcut>
          <view
                closeable="true"
                id="org.eclipse.rse.shells.ui.view.commandsView"
                moveable="true"
                relationship="stack"
                relative="org.eclipse.ui.views.ProblemView"
                visible="true">
          </view>
          <viewShortcut
                id="org.eclipse.rse.shells.ui.view.commandsView">
          </viewShortcut>
          <view
                closeable="true"
                id="org.eclipse.rse.ui.view.systemView"
                moveable="true"
                ratio="0.7"
                relationship="bottom"
                relative="org.eclipse.ui.views.ResourceNavigator"
                visible="true">
          </view>
          <viewShortcut
                id="org.eclipse.rse.ui.view.systemView">
          </viewShortcut>
          <view
                closeable="true"
                id="org.eclipse.mylyn.tasks.ui.views.tasks"
                moveable="true"
                relationship="top"
                ratio="0.5"
                relative="org.eclipse.ui.views.ContentOutline"
                visible="true">
          </view>
          <viewShortcut
                id="org.eclipse.mylyn.tasks.ui.views.tasks">
          </viewShortcut>
          <view
                closeable="true"
                id="org.eclipse.tm.terminal.view.TerminalView"
                moveable="true"
                relationship="stack"
                relative="org.eclipse.ui.views.ProblemView"
                visible="true">
          </view>
          <viewShortcut
                id="org.eclipse.tm.terminal.view.TerminalView">
          </viewShortcut>
       </perspectiveExtension>
    </extension>

</plugin>
