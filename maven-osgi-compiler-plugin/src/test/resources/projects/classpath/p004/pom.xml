  <modelVersion>4.0.0</modelVersion>
  <groupId>classpath</groupId>
  <artifactId>p004</artifactId>
  <packaging>eclipse-plugin</packaging>
  <version>1.0.0</version>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.codehaus.tycho</groupId>
        <artifactId>maven-osgi-compiler-plugin</artifactId>
        <version>0.2.0-SNAPSHOT</version>
        <configuration>
          <compileSourceRoots>
            <compileSourceRoot>target/projects/classpath/p001/src</compileSourceRoot>
          </compileSourceRoots>
          <compilerId>jdt</compilerId>
          <outputDirectory>target/projects/classpath/p002/target/classes</outputDirectory>
          <buildDirectory>target/projects/classpath/p002/target</buildDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
