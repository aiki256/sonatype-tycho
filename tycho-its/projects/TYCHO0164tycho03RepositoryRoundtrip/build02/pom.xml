<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.tycho.tychoits.tycho12.build02</groupId>
  <artifactId>parent</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <!-- <module>build02.bundle01</module>  -->
    <module>build02.bundle02</module>
    <module>build02.feature01</module>
    <module>build02.site01</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <!-- import does not seem to work in maven 3.0 yet
      <dependency>
        <groupId>org.codehaus.tycho.tychoits.tycho12.build01.bundle01</groupId>
        <artifactId>org.codehaus.tycho.tychoits.tycho12.build01.bundle01</artifactId>
        <version>1.0.0</version>
        <scope>import</scope>
      </dependency>
       -->
      <dependency>
        <!-- needed to make maven core happy only, not used by tycho -->
        <groupId>eclipse.org</groupId>
        <artifactId>installation</artifactId>
        <version>0.0.0</version>

        <!--  important stuff -->
        <type>eclipse-installation</type>
        <scope>system</scope>
        <systemPath>${targetPlatform}</systemPath>
      </dependency>

      <dependency>
        <groupId>org.codehaus.tycho.tychoits.tycho12.build01</groupId>
        <artifactId>org.codehaus.tycho.tychoits.tycho12.build01.feature01</artifactId>
        <version>1.0.0</version>
        <type>eclipse-feature</type>
      </dependency>

      <dependency>
        <groupId>org.codehaus.tycho.tychoits.tycho12.build01</groupId>
        <artifactId>org.codehaus.tycho.tychoits.tycho12.build01.bundle02</artifactId>
        <version>1.0.0</version>
        <type>eclipse-plugin</type>
      </dependency>

      <dependency>
        <groupId>org.codehaus.tycho.tychoits.tycho12.build01</groupId>
        <artifactId>org.codehaus.tycho.tychoits.tycho12.build01.bundle03</artifactId>
        <version>1.0.0</version>
        <type>eclipse-test-plugin</type>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>

</project>
