<component>
  <fileSets>
    <fileSet>
      <directory>target/dependency/apache-maven-${maven-version}</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>**/wagon*</exclude>
        <exclude>bin/m2.conf</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <includes>
        <include>wagon*.jar</include>
      </includes>
      <outputDirectory>/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/bin</directory>
      <outputDirectory>/bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/conf</directory>
      <outputDirectory>/conf</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>tycho</outputDirectory>
      <includes>
        <include>org.codehaus.tycho:tycho-osgi-components</include>
        <include>org.eclipse:org.eclipse.osgi</include>
      </includes>
    </dependencySet>
  </dependencySets>
</component>